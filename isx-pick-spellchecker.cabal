cabal-version:          2.4
name:                   isx-pick-spellchecker
version:                1.0
synopsis:               Isoxya Pickax Spellchecker
license:                BSD-3-Clause
license-file:           LICENSE
author:                 Pavouk OÃœ
maintainer:             en@pavouk.tech
build-type:             Simple
extra-source-files:     README.md
--------------------------------------------------------------------------------
common shared-properties
    build-depends:
        base-noprelude                  ==  4.12.*,
        relude
    mixins:
        relude                          (Relude as Prelude)
    default-language:   Haskell2010
    default-extensions:
        OverloadedStrings
    ghc-options:
        -Wall
        -ddump-minimal-imports
--------------------------------------------------------------------------------
library common
    import:             shared-properties
    exposed-modules:
        PVK.Com.API.Aeson
        PVK.Com.API.Ext.URI
        PVK.Com.API.Req
        PVK.Com.API.Res
        PVK.Com.API.Resource.CommonError
        PVK.Com.API.Resource.ISXPick
        PVK.Com.API.Resource.ISXPickSnap
        PVK.Com.API.Zone.Common.Error
    build-depends:
        aeson,
        base64-bytestring,
        network-uri,
        snap-core,
        snap-extras,
        unordered-containers
    hs-source-dirs:
        lib/common/src

library isx-pick-spellchecker-int
    import:             shared-properties
    exposed-modules:
        ISX.Pick.Spellchecker.Checker
        ISX.Pick.Spellchecker.Parser
        ISX.Pick.Spellchecker.Route
        ISX.Pick.Spellchecker.Zone.Common.Apex
        ISX.Pick.Spellchecker.Zone.Common.Data
    other-modules:
        ISX.Pick.Spellchecker.Resource.Common
    build-depends:
        common,
        --
        aeson,
        containers,
        hxt,
        process-extras,
        snap-core,
        snap-extras,
        text,
        time
    hs-source-dirs:
        src
--------------------------------------------------------------------------------
executable isx-pick-spellchecker
    import:             shared-properties
    main-is:            Main.hs
    build-depends:
        common,
        isx-pick-spellchecker-int,
        --
        snap-server
    hs-source-dirs:
        src/ISX/Pick/Spellchecker/Bin
    ghc-options:
        -threaded
--------------------------------------------------------------------------------
library common-test
    import:             shared-properties
    exposed-modules:
        PVK.Com.API.Test
    build-depends:
        common,
        --
        aeson,
        base64-bytestring,
        bytestring,
        directory,
        filepath,
        hspec                           ==  2.*,
        http-link-header,
        lens,
        lens-aeson,
        snap-core
    mixins:
        relude                          (Relude.Unsafe)
    hs-source-dirs:
        lib/common/test

test-suite isx-pick-spellchecker-test
    import:             shared-properties
    type:               exitcode-stdio-1.0
    main-is:            Spec.hs
    other-modules:
        ISX.Factory
        ISX.Pick.Spellchecker.CheckerSpec
        ISX.Pick.Spellchecker.ParserSpec
        ISX.Pick.Spellchecker.Zone.Common.ApexSpec
        ISX.Pick.Spellchecker.Zone.Common.DataSpec
        ISX.Test
    build-depends:
        isx-pick-spellchecker-int,
        common,
        common-test,
        --
        aeson,
        containers,
        hspec                           ==  2.*,
        network-uri,
        text,
        vector
    mixins:
        relude                          (Relude.Unsafe)
    hs-source-dirs:
        test
    build-tool-depends:
        hspec-discover:hspec-discover   ==  2.*
    ghc-options:
        -threaded
--------------------------------------------------------------------------------
